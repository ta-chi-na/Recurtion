#include <cs50.h>
#include <stdio.h>

//The prototype 
void draw(int n);

int main(void)

{
    int height = get_int("Height: ");

    draw(height);
}

void draw(int n)

{
    // this is the where the code start 'i = 0' <always starts with '0'
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < i +1; j++)
        {
            printf("#");
        }
        printf("\n");
    }
}
